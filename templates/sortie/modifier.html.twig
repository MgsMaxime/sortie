{% block body %}
    {# début du form #}
    {{ form_start(ModfierSortie) }}

    <div class="creation-sortie">
        {# découpage par champ #}
        {{ form_label(ModfierSortie.nom) }}
        {{ form_widget(ModfierSortie.nom) }}
        {{ form_errors(ModfierSortie.nom) }}
